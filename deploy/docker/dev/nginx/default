server {
  underscores_in_headers on;
  listen 80;
  listen [::]:80;
  client_max_body_size 100M;

  root /home/bubify/portal/frontend/build;
  index index.html index.htm;

  location / {
    if (-f /home/bubify/maintenance.on) {
    return 418;
    }
    try_files $uri $uri/ /index.html;
  }

  location = /favicon.ico {
    return 204;
    access_log off;
    log_not_found off;
  }

  # Media: images, icons, video, audio, HTC
  location ~* \.(?:jpg|jpeg|gif|png|ico|cur|gz|svg|svgz|mp4|ogg|ogv|webm|htc)$ {
    expires 1M;
    access_log off;
    add_header Cache-Control "public";
  }

  # Javascript and CSS files
  location ~* \.(?:css|js)$ {
    try_files $uri =404;
    expires 1y;
    access_log off;
    add_header Cache-Control "public";
  }

  location /api/ {
    if (-f /home/bubify/maintenance.on) {
      return 503;
    }
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-NginX-Proxy true;
    proxy_pass https://localhost:8900/;
    proxy_ssl_session_reuse off;
    proxy_set_header Host $http_host;
    proxy_cache_bypass $http_upgrade;
    proxy_redirect off;
  }

  location /secured/ {
    if (-f /home/bubify/maintenance.on) {
      return 503;
    }

    port_in_redirect off;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-NginX-Proxy true;
    proxy_pass https://localhost:8900/secured;
    proxy_ssl_session_reuse off;
    proxy_set_header Host $http_host;
    proxy_cache_bypass $http_upgrade;
    proxy_redirect off;
  }

  location /api/portfolio/ {
    if (-f /home/bubify/maintenance.on) {
      return 503;
    }

    proxy_pass https://localhost:8900/portfolio/;

    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
    proxy_set_header X-NginX-Proxy true;
    proxy_pass_request_headers on;
  }

  error_page 418 @maintenance_page;
  location @maintenance_page {
      rewrite ^(.*)$ /maintenance_page.html break;
  }
}